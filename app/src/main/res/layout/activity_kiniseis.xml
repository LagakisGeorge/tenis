<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kiniseis">


    <CalendarView
        android:id="@+id/calendarView7"
        android:layout_width="339dp"
        android:layout_height="318dp"
        android:layout_above="@+id/button33"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="11dp" />

    <GridView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="366dp"
        android:background="@android:color/holo_green_light"
        android:numColumns="2"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="375dp" />

    <Button
        android:id="@+id/button33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="send_email"
        android:text="email"
        android:layout_alignParentBottom="true"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="683dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button33"
        android:text="από" />

    <TextView
        android:id="@+id/apoHmer"
        android:layout_width="90dp"

        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/apoHmer"
        android:text="εως" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView44"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/textView44" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="400dp"
        android:layout_height="105dp"
        android:layout_above="@+id/button33"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />


</RelativeLayout>